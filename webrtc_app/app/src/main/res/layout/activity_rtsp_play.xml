<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    android:orientation="vertical"
    tools:context=".activity.RtspPlayActivity">

    <!-- Top Row: Logo and Current Time -->
    <RelativeLayout
        android:id="@+id/ll_top_row"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingStart="6dp"
        android:paddingEnd="6dp"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- 返回按钮 -->
        <Button
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:minHeight="0dp"
            android:paddingVertical="4dp"
            android:text="←返回"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:layout_toRightOf="@id/btn_back"
            android:text="播放分享直播视频"
            android:textColor="@color/white"
            android:textSize="14sp" />



    </RelativeLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/bottomContainer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/ll_top_row"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <GridLayout
            android:id="@+id/gl_grid"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@color/mypoc_bottomtab_bgcolor"
            android:columnCount="1"
            android:rowCount="1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintWidth_percent="1"
            app:layout_constraintHorizontal_bias="0" >

            <!--第1个通道-->
            <FrameLayout
                android:id="@+id/fl1"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:background="@color/mypoc_bottomtab_bgcolor"
                android:layout_margin="1dp"
                >

                <!--为了全屏还原用-->
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    >

                    <com.mypoc.ptt.player.views.VideoTextureView
                        android:id="@+id/sv_video1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:keepScreenOn="true"
                        android:background="@color/black"
                        >

                    </com.mypoc.ptt.player.views.VideoTextureView>

                    <TextView
                        android:id="@+id/tv_video_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="通道1"
                        android:visibility="visible"
                        android:textSize="14sp"
                        android:layout_gravity="center"
                        android:textColor="@android:color/white"/>

                    <!--接下来放一些视频控制的按钮-->

                </FrameLayout>

            </FrameLayout>


        </GridLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>