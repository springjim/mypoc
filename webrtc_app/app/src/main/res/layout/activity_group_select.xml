<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mypoc_bg_color"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context=".activity.keypad.GroupSelectActivity">

    <!-- 顶部导航条 -->
    <LinearLayout
        android:visibility="gone"
        android:id="@+id/ll_nav_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/mypoc_bg_color"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="4dp">

        <!-- 返回按钮 -->
        <Button
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/white"
            android:textSize="12sp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:minHeight="0dp"
            android:paddingVertical="4dp"
            android:focusable="false"
            android:focusableInTouchMode="false"

            />

        <!-- 组名称（居中） -->
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text=""
            android:textColor="@color/white"
            android:textSize="12sp"
            android:gravity="center"
            android:maxLines="1"
            android:ellipsize="end"
            android:includeFontPadding="false"
            android:paddingVertical="4dp"
            />

        <!-- 右侧占位（保持对称） -->
        <View
            android:layout_width="48dp"
            android:layout_height="1dp" />
    </LinearLayout>

    <include
        android:id="@+id/nav_ok_cancel"
        layout="@layout/title_nav_ok_cancel"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_alignParentBottom="true" />

    <LinearLayout
        android:id="@+id/ll_allgroup_list"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_above="@id/nav_ok_cancel"
        android:layout_below="@id/ll_nav_bar"
        android:background="@color/white"

        >

        <ListView
            android:id="@+id/allgroup_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:cacheColorHint="@android:color/transparent"
            android:divider="@color/listview_divider_color"
            android:dividerHeight="0.5dip"
            android:listSelector="#FFDD00"
            android:focusable="true"
            android:focusableInTouchMode="true"
            />
    </LinearLayout>

</RelativeLayout>